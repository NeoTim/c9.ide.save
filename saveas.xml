<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:script><![CDATA[
        function filesort(value, args, xmlNode) {
            return (xmlNode.tagName == "folder" ? 0 : 1) + value.toLowerCase();
        }
    ]]></a:script>

    <a:window
      id        = "winSaveAs"
      center    = "true"
      height    = "395"
      icon      = ""
      buttons   = "close"
      skin      = "bk-window2"
      kbclose   = "true"
      resizable = "true"
      title     = "Save As"
      width     = "480"
      draggable = "true">
        <a:vbox
          anchors   = "10 10 0 10"
          padding   = "5">
            <a:hbox
              align     = "center"
              padding   = "5">
                <a:label class="lbl_saveas">Save as:</a:label>
                <a:textbox
                  id           = "txtSaveAs"
                  flex         = "7"
                  focusselect  = "true" />
            </a:hbox>
            <a:hbox
              align     = "center"
              padding   = "5">
                <a:label class="lbl_saveas">Where:</a:label>
                <a:label id="lblPath" class="lbl_filepath" />
            </a:hbox>
            
            <div class="dgLikeContaier"  flex="1">
                <div class="heading">Project folder</div>
                <a:hbox
                  anchors  = "20 0 0 0"
                  overflow = "hidden">
                    <a:tree
                      id            = "trSaveAs"
                      class         = "trDgLike"
                      flex          = "1"
                      scrollbar     = "sbShared 2 2 2"
                      canrename     = "true">
                        <a:each match="[project|file|folder]" sort="[@name]" sort-method="filesort">
                           <a:insert match="[folder]" />
                           <a:caption match="[@name]" />
                           <a:icon
                             match = "[folder]"
                             value = "folder.png" />
                           <a:icon
                             match = "[file]"
                             value = "{apf.getPlugin('util').getFileIcon(%[.])}" />
                           <a:css match="[file]" value="file_item"></a:css>
                        </a:each>
                        <a:rename match="[file|folder[not(@root)]]" />
                        <a:remove match="[file|folder]" />
                    </a:tree>
                </a:hbox>
            </div> 
            <a:hbox padding="15" align="center">
                <a:button
                  id       = "btnCreateFolder"
                  width    = "104"
                  icon     = "folder_new.png"
                  class    = "btnIconOnly smallCaption newFolder"
                  tooltip  = "Create folder">
                    Create folder
                </a:button>
                <a:filler />
                <a:checkbox
                  id      = "chkShowFiles"
                  skin    = "checkbox_grey"
                  checked = "true"
                  width   = "120"
                  margin  = "4 0 0">
                    Show files in tree
                </a:checkbox>
            </a:hbox>
            
            <a:hbox edge="23 0 10" pack="end" padding="8">
                <a:button
                  id       = "btnSaveAsCancel"
                  skin     = "btn-default-css3"
                  caption  = "Cancel"
                />
                <a:button
                  id      = "btnSaveAsOK"
                  class   = "btn-green"
                  caption = "Save"
                  default = "2"
                  skin    = "btn-default-css3"
                />
            </a:hbox>
        </a:vbox>
    </a:window>
</a:application>